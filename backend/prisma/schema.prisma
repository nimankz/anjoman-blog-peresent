generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Source {
  SELF_SIGNUP
  INVITATION
}
enum PostType {
  ARTICLE
  ANNOUNCEMENT
  EVENT
}
model User {
  id                           String       @id @default(uuid())
  source                       Source       @default(SELF_SIGNUP)
  email                        String       @unique
  hashedPassword               String?
  firstName                    String?
  lastName                     String?
  onboarded                    Boolean      @default(false)
  emailConfirmationToken       String?      @unique
  emailConfirmationTokenSentAt DateTime?
  emailConfirmed               Boolean      @default(false)
  passResetToken               String?      @unique
  passResetTokenCreatedAt      DateTime?
  createdAt                    DateTime     @default(now())
  updatedAt                    DateTime     @updatedAt
  memberships                  Membership[]
}
model Article {
  id        String   @id @default(uuid())
  title     String
  content   String
  status    String
  userId    String
  creator   User     @relation(fields: [userId], references: [id])
  comments  Comment[]
}
model Announcement {
  id        String   @id @default(uuid())
  title     String
  content   String
  userId    String
  creator   User     @relation(fields: [userId], references: [id])
  comments  Comment[]
}
model Event {
  id        String   @id @default(uuid())
  name      String
  date      DateTime
  userId    String
  creator   User     @relation(fields: [userId], references: [id])
  comments  Comment[]
}
model Comment {
  id        String   @id @default(uuid())
  title     String
  content   String
  postType  PostType
  postId    String
}
